<?xml version="1.0" encoding="utf-8" ?> 

<entities:entities
  xmlns:entities="http://www.adammil.net/Chrono/entities"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.adammil.net/Chrono/entities entities.xsd">

<!-- ants -->
<entityGroup name="ants">
  <entity id="_ant" type="Bug" spawnSize="2:5" ac="3" str="14:18" int="4:6" dex="8:12" gender="neither"/>
  <entity name="giant ant" inherit="_ant" chance="40" color="Brown" level="1">
    <attack amount="1d4" type="Bite"/>
  </entity>

  <entity name="soldier ant" inherit="_ant" ac="4" chance="16" level="3">
    <attack amount="2d4" type="Bite" chance="67"/>
    <attack amount="3:4" type="Sting" damage="DrainStr"/>
  </entity>

  <entity name="fire ant" inherit="_ant" chance="8" level="3">
    <attack amount="2d4" type="Bite" chance="50"/>
    <attack amount="2d4" type="Bite" damage="Fire"/>
    <resist type="Fire"/>
    <confer type="Fire" chance="30"/>
  </entity>
</entityGroup>

<!-- bees -->
<entityGroup name="bees">
  <entity id="_bee" type="Bug" spawnSize="3:8" ev="5" str="8:12" int="4:6" dex="10:14" flies="true" gender="female">
    <resist type="Poison"/>
    <confer type="Poison" chance="40"/>
  </entity>
  <entity name="killer bee" inherit="_bee" chance="20" level="2">
    <attack type="Sting" damage="DrainStr" amount="1:3" chance="80"/>
    <attack type="Sting" amount="1:4"/>
  </entity>
</entityGroup>

<!-- bugs -->
<entityGroup name="bugs">
  <group name="ants"/>
  <group name="bees"/>
</entityGroup>

<!-- humanoids -->
<entityGroup name="humanoids">
  <entity name="hobbit" class="*Melee*" type="Humanoid"
          level="1" ac="2" speed="40" chance="15" str="8:12" dex="10:14" int="7:13" ev="1">
    <attack type="Weapon"/>
  </entity>

  <entity name="wizard" class="*Magic*" type="Humanoid"
          level="2" ac="2" speed="40" chance="10" str="8:12" dex="10:14" int="15:19" ev="1">
    <attack type="Magic"/>
  </entity>
</entityGroup>

<!-- quest related entities -->
<entity name="Pa" ai="fatherOfPC" type="Townsperson" race="*Player*" gender="male" IsAdult="true" baseName="clerk">
  <give class="Gold" count="1000"/>
</entity>

<entity name="Uncle John" ai="uncleJohn" type="Townsperson" gender="male" IsAdult="true" baseName="hunter">
  <give class="FlamingArrow" count="40"/>
</charData>

</entities:entities>